# alias
alias ..='cd ..'
case "${OSTYPE}" in
  darwin*)
  alias ls='gls --color'
  alias la='gls -alF --color'
  export PATH=.vim/bundle/powerline/scripts:$PATH
  ;;  
  linux*)
  alias ls='ls --color=auto'
  alias la='ls -alF --color=auto'
    ;;  
esac
# insert `date` for YYYYMMDD on F5
 function insert_date {
   LBUFFER=$LBUFFER'$(date +%Y%m%d)'
   }
   zle -N insert_date
   bindkey '^]' insert_date
